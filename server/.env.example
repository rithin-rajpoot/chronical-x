# Environment Variables Template
# Copy this file to .env in the server directory and fill in your actual values

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/chronicalx
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/chronicalx

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Client URLs (for CORS and cookie settings)
CLIENT_URL_DEV=http://localhost:5173
CLIENT_URL=http://localhost:5173
# For production: CLIENT_URL=https://your-frontend-domain.vercel.app

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Google OAuth (if using Google authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (if using email notifications)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password